@model Student
<h3>Info of Instructor</h3>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Adress</th>
            <th scope="col">Salary</th>
            <th scope="col">Dept</th>
            <th scope="col">Image</th>
            <th scope="col">Edit</th>
            <th scope="col">Show Courses</th>
        </tr>
    </thead>
    <tr>
        <td>@Model.User.Name</td>
        <td>@Model.User.Address</td>
        <td>@Model.User.Age</td>
        <td>@Model.User.Image</td>
        <td><img class="card-img-top" src="/Images/@Model.User.Image" alt="" style="height:50px; width:auto"></td>
        <td> <a href="/Student/Edit/@Model.Id" class="btn btn-alert-success btn-outline-secondary">Edit</a></td>
        <td> <a onclick="AjaxCall(@Model.Id)" class="btn btn-success">Show Courses</a></td>
    </tr>
</table>

<div style="background-color:lightblue" id="div1">
</div>

<script>
    function AjaxCall(id){
        $.ajax(
            {
                url  : "/Student/ShowStudentWithCrs",
                data :{"CourseId":id},
                success: function(result){
                            $("#div1").html(result);
                    }
            }
            );
         }
</script>
