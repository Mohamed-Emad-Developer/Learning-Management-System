@using CollegeMS.viewModel
@model InstructorInfoViewModel
<table class="table table-hover">
    <thead>
        <tr>
            <th colspan="2" align="center">Welcom @Model.Name</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th scope="row">Address</th>
            <td>@Model.Address</td>
        </tr>
        <tr>
            <th scope="row">Gender</th>
            <td>@Model.Gender</td>
        </tr>
        <tr>
            <th scope="row">Age</th>
            <td>@Model.Age</td>
        </tr>
        <tr>
            <th scope="row">Email</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th scope="row">Image</th>
            <td><img src="/Images/@Model.Image" class="rounded-circle mb-3" style="width:65px;" alt=""></td>
        </tr>
    </tbody>
</table>
<div>
    
        <a class="btn btn-danger" href="/Instructor/EditInstructorInfo/@Model.id">Edit</a>
 

    <a class="btn btn-outline-danger" href="/Instructor/details/@Model.id">back to courses</a>


</div>
