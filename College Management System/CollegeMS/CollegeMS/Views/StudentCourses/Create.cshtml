@model CollegeMS.Models.StudentCourses

@{
    ViewData["Title"] = "Create";
    SelectList Students, Courses;
    if (Model != null)
    {
        Students = new SelectList(ViewBag.Students, "Id", "User.Name", Model.StudentId);
        Courses = new SelectList(ViewBag.Courses, "Id", "Name", Model.CourseId);
    }
    else
    {
        Students = new SelectList(ViewBag.Students, "Id", "User.Name");
        Courses = new SelectList(ViewBag.Courses, "Id", "Name");

    }
}

<h4>Assign Student to Courses</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @ViewBag.error
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudentId" class="control-label"></label>
                <select asp-for="StudentId" asp-items="Students" class="form-control"></select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseId" class="control-label"></label>
                <select asp-for="CourseId" asp-items="Courses" class="form-control"></select>
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
