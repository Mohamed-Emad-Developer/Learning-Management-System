@model IEnumerable<CollegeMS.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<h1>All College Courses</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Add New Course <i class="fas fa-plus ms-2"></i></a>
</p>
<table class="table table-bordered">
    <thead class="bg-success text-white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Degree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinDegree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dep)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instructor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Degree)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinDegree)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dep.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Instructor.User.Name)
                </td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id">Update</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="delete-btn" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
